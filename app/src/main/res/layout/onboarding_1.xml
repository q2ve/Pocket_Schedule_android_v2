<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/login_onboarding_1_logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="50dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:orientation="vertical">

		<TextView
			android:id="@+id/login_onboarding_1_logo_up"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/app_name_pocket"
			android:textAlignment="center"
			android:textColor="@color/colorBlue"
			android:textSize="64sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/login_onboarding_1_logo_down"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:translationY="-20dp"
			android:text="@string/app_name_schedule"
			android:textAlignment="center"
			android:textColor="@color/colorBlue"
			android:textSize="48sp"
			android:textStyle="bold" />

	</LinearLayout>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="52dp"
		android:layout_marginBottom="15dp"
		android:text="@string/welcome"
		android:gravity="center"
		android:textColor="@color/colorBlack"
		android:textSize="21sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@+id/login_onboarding_1_textview1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/login_onboarding_1_textview1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="52dp"
		android:layout_marginBottom="110dp"
		android:text="@string/onboarding_first_description"
		android:gravity="center"
		android:textColor="@color/colorLightGray1"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>