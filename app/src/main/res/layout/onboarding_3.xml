<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="12dp"
		android:layout_marginTop="40dp"
		android:background="@drawable/rc_28dp"
		android:elevation="@dimen/shadow_elevation"
		android:orientation="vertical"
		android:padding="16dp"
		app:layout_constraintBottom_toTopOf="@+id/login_onboarding_3_textview2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/onboarding_3_example_1"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginVertical="6dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<ImageView
				android:id="@+id/onboarding_3_1_1"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:background="@drawable/rc_10dp"
				android:backgroundTint="@color/colorBlueLight"
				android:scaleType="centerInside"
				android:src="@drawable/ic_recent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:tint="@color/colorBlue" />

			<TextView
				android:id="@+id/onboarding_3_1_2"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="8dp"
				android:layout_marginTop="2dp"
				android:ellipsize="end"
				android:lines="1"
				android:maxLines="1"
				android:text="@string/onboarding_third_example_title_one"
				android:textColor="@color/colorBlack"
				android:textSize="15sp"
				android:textStyle="bold"
				app:layout_constraintEnd_toStartOf="@+id/onboarding_3_1_4"
				app:layout_constraintStart_toEndOf="@+id/onboarding_3_1_1"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintWidth_default="spread" />

			<TextView
				android:id="@+id/onboarding_3_1_3"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_marginHorizontal="8dp"
				android:layout_marginBottom="2dp"
				android:ellipsize="end"
				android:gravity="bottom"
				android:lines="1"
				android:maxLines="1"
				android:text="@string/onboarding_third_example_description_one"
				android:textColor="@color/colorLightGray1"
				android:textSize="14sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toStartOf="@+id/onboarding_3_1_4"
				app:layout_constraintHeight_default="spread"
				app:layout_constraintStart_toEndOf="@+id/onboarding_3_1_1"
				app:layout_constraintTop_toBottomOf="@+id/onboarding_3_1_2"
				app:layout_constraintWidth_default="spread" />

			<LinearLayout
				android:id="@+id/onboarding_3_1_4"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginEnd="4dp"
				android:gravity="center_vertical"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toStartOf="@+id/onboarding_3_1_5"
				app:layout_constraintTop_toTopOf="parent">

				<ImageView
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:layout_marginHorizontal="4dp"
					android:scaleX="1.5"
					android:scaleY="1.5"
					android:src="@drawable/ic_schedule"
					app:tint="@color/colorBlue" />

			</LinearLayout>

			<ImageView
				android:id="@+id/onboarding_3_1_5"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:src="@drawable/ic_check"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:tint="@color/colorLightGray3" />

		</androidx.constraintlayout.widget.ConstraintLayout>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/onboarding_3_example_2"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginVertical="6dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<ImageView
				android:id="@+id/onboarding_3_2_1"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:background="@drawable/rc_10dp"
				android:backgroundTint="@color/colorRedMainLight"
				android:scaleType="centerInside"
				android:src="@drawable/ic_recent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:tint="@color/colorDeadlineRed" />

			<TextView
				android:id="@+id/onboarding_3_2_2"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="8dp"
				android:layout_marginTop="2dp"
				android:ellipsize="end"
				android:lines="1"
				android:maxLines="1"
				android:text="@string/onboarding_third_example_title_two"
				android:textColor="@color/colorBlack"
				android:textSize="15sp"
				android:textStyle="bold"
				app:layout_constraintEnd_toStartOf="@+id/onboarding_3_2_4"
				app:layout_constraintStart_toEndOf="@+id/onboarding_3_2_1"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintWidth_default="spread" />

			<TextView
				android:id="@+id/onboarding_3_2_3"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_marginHorizontal="8dp"
				android:layout_marginBottom="2dp"
				android:ellipsize="end"
				android:gravity="bottom"
				android:lines="1"
				android:maxLines="1"
				android:text="@string/onboarding_third_example_description_two"
				android:textColor="@color/colorLightGray1"
				android:textSize="14sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toStartOf="@+id/onboarding_3_2_4"
				app:layout_constraintHeight_default="spread"
				app:layout_constraintStart_toEndOf="@+id/onboarding_3_2_1"
				app:layout_constraintTop_toBottomOf="@+id/onboarding_3_2_2"
				app:layout_constraintWidth_default="spread" />

			<LinearLayout
				android:id="@+id/onboarding_3_2_4"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginEnd="4dp"
				android:gravity="center_vertical"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toStartOf="@+id/onboarding_3_2_5"
				app:layout_constraintTop_toTopOf="parent">

				<ImageView
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:layout_marginHorizontal="4dp"
					android:src="@drawable/ic_file"
					app:tint="@color/colorBlue" />

				<ImageView
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:layout_marginHorizontal="4dp"
					android:scaleX="1.5"
					android:scaleY="1.5"
					android:src="@drawable/ic_schedule"
					app:tint="@color/colorBlue" />

			</LinearLayout>

			<ImageView
				android:id="@+id/onboarding_3_2_5"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:src="@drawable/ic_check"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:tint="@color/colorLightGray3" />

		</androidx.constraintlayout.widget.ConstraintLayout>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/onboarding_3_example_3"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginVertical="6dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<ImageView
				android:id="@+id/onboarding_3_3_1"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:background="@drawable/rc_10dp"
				android:backgroundTint="@color/colorGreenLight"
				android:scaleType="centerInside"
				android:src="@drawable/ic_mark"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:tint="@color/colorDeadlineGreen" />

			<TextView
				android:id="@+id/onboarding_3_3_2"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="8dp"
				android:layout_marginTop="2dp"
				android:ellipsize="end"
				android:lines="1"
				android:maxLines="1"
				android:text="@string/onboarding_third_example_title_three"
				android:textColor="@color/colorBlack"
				android:textSize="15sp"
				android:textStyle="bold"
				app:layout_constraintEnd_toStartOf="@+id/onboarding_3_3_4"
				app:layout_constraintStart_toEndOf="@+id/onboarding_3_3_1"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintWidth_default="spread" />

			<TextView
				android:id="@+id/onboarding_3_3_3"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_marginHorizontal="8dp"
				android:layout_marginBottom="2dp"
				android:ellipsize="end"
				android:gravity="bottom"
				android:lines="1"
				android:maxLines="1"
				android:text="@string/onboarding_third_example_description_three"
				android:textColor="@color/colorLightGray1"
				android:textSize="14sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toStartOf="@+id/onboarding_3_3_4"
				app:layout_constraintHeight_default="spread"
				app:layout_constraintStart_toEndOf="@+id/onboarding_3_3_1"
				app:layout_constraintTop_toBottomOf="@+id/onboarding_3_3_2"
				app:layout_constraintWidth_default="spread" />

			<LinearLayout
				android:id="@+id/onboarding_3_3_4"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginEnd="4dp"
				android:gravity="center_vertical"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toStartOf="@+id/onboarding_3_3_5"
				app:layout_constraintTop_toTopOf="parent">

				<ImageView
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:layout_marginHorizontal="4dp"
					android:scaleX="1.1"
					android:scaleY="1.1"
					android:src="@drawable/ic_article_outline"
					app:tint="@color/colorBlue" />

			</LinearLayout>

			<ImageView
				android:id="@+id/onboarding_3_3_5"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:src="@drawable/ic_check"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:tint="@color/colorLightGray3" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</LinearLayout>

	<TextView
		android:id="@+id/login_onboarding_3_textview2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="52dp"
		android:layout_marginBottom="15dp"
		android:text="@string/deadlines"
		android:gravity="center"
		android:textColor="@color/colorBlack"
		android:textSize="21sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@+id/login_onboarding_3_textview1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/login_onboarding_3_textview1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="52dp"
		android:layout_marginBottom="110dp"
		android:text="@string/onboarding_third_description"
		android:gravity="center"
		android:textColor="@color/colorLightGray1"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>