<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/core_navigation"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPlaqueBackground" >
	
	<FrameLayout
		android:id="@+id/core_navigation_frame"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
	
	<LinearLayout
		android:id="@+id/core_navbar_frame"
		android:layout_width="match_parent"
		android:layout_height="70dp"
		android:layout_alignParentBottom="true"
		android:layout_marginStart="30dp"
		android:layout_marginEnd="30dp"
		android:layout_marginBottom="20dp"
		android:background="@drawable/rc_28dp"
		android:elevation="@dimen/shadow_elevation"
		android:orientation="horizontal" />

</RelativeLayout>